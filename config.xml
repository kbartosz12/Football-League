<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		id          = "FootbalLeague"
        version     = "1.0.0" >

    <name>Football Ligue</name>
    <description>Local Football Ligue</description>
    
	<platform name="android" />
	
	<plugin name="cordova-plugin-device" spec="~1.1.4" />
	<plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
	<allow-navigation href="*" />
	<allow-intent href="*" />
	<access origin="*" />
	<plugin name="cordova-plugin-whitelist" spec="1" />
	 
	 <platform name="android">
        <icon src="www/logo_icon.png" density="ldpi" />
        <icon src="www/logo_icon.png" density="mdpi" />
        <icon src="www/logo_icon.png" density="hdpi" />
        <icon src="www/logo_icon.png" density="xhdpi" />
        <icon src="www/logo_icon.png" density="xxhdpi" />
        <icon src="www/logo_icon.png" density="xxxhdpi" />
        <splash src="www/logo_icon.png" density="land-hdpi"/>
        <splash src="www/logo_icon.png" density="land-ldpi"/>
        <splash src="www/logo_icon.png" density="land-mdpi"/>
        <splash src="www/logo_icon.png" density="land-xhdpi"/>
        <splash src="www/logo_icon.png" density="land-xhdpi"/>
        <splash src="www/logo_icon.png" density="land-xhdpi"/>
        <splash src="www/logo_icon.png" density="port-hdpi"/>
        <splash src="www/logo_icon.png" density="port-ldpi"/>
        <splash src="www/logo_icon.png" density="port-mdpi"/>
        <splash src="www/logo_icon.png" density="port-xhdpi"/>
        <splash src="www/logo_icon.png" density="port-xxhdpi"/>
        <splash src="www/logo_icon.png" density="port-xxxhdpi"/>
    </platform>
	
	<gap:splash src="www/logo_icon.png" />
	
	<gap:plugin name="onesignal-cordova-plugin" spec="^2.1.1" source="npm" />


<preference name="phonegap-version" value="cli-6.3.0" />
<preference name="android-build-tool" value="gradle" />


<preference name="windows-appx-target" value="8.1-phone" />
<preference name="WindowsToastCapable" value="true" />

</widget>
